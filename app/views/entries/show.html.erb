<% content_for :title, @entry.title %>

<div class="mx-auto w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="mb-4">
    <%= link_to "< Back", entries_path, class: "underline" %>
  </div>

  <%= render @entry %>

  <%= link_to edit_entry_path(@entry) do %>
    <%= render Widgets::ButtonComponent.new(text: "Edit") %>
  <% end %>
  <div class="inline-block ml-2">
    <%= button_to @entry, method: :delete do %>
      <%= render Widgets::ButtonComponent.new(text: "Delete", variant: :danger) %>
    <% end %>
  </div>
</div>
