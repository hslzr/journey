<% content_for :title, @entry.title %>

<div class="md:w-2/3 w-full mx-auto">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="mb-4">
    <%= link_to "< Back", entries_path, class: "underline" %>
  </div>

  <%= render @entry %>

  <%= link_to edit_entry_path(@entry), class: "mt-2 bg-black inline-block border-brutal-radius" do %>
    <span class="bg-white font-bold block border-brutal-radius border-2 border-black px-4 py-1.5 -translate-x-1 -translate-y-1 hover:translate-y-0 hover:translate-x-0 transition-all">
    Edit
    </span>
  <% end %>
  <div class="inline-block ml-2">
    <%= button_to @entry, method: :delete, class: "mt-2 bg-black inline-block border-brutal-radius" do %>
      <span class="bg-red-600 font-bold text-white block border-brutal-radius border-2 -translate-x-1 -translate-y-1 border-black py-1.5 px-4 hover:translate-y-0 hover:translate-x-0 transition-all">
      Delete
      </span>
    <% end %>
  </div>
</div>
